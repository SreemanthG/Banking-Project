<%- include("../partials/header")-%>
<div class="container">
    <h2>Customers</h2>
    <p>All account customers can be found here</p>  
    <input class="form-control" id="myInput" type="text" placeholder="Search..">
    <br>
    <table class="table table-bordered table-striped">
      <thead>
        <tr>
          <th>Name</th>
          <th>gender</th>
          <th>Dob</th>
          <th>mobile</th>
          <th>email</th>
          <th>view</th>
        </tr>
      </thead>
      <tbody id="myTable">
          <%customers.forEach(function(customer){%>
        <tr>
          <td> <%=customer.username%> </td>
          <td><%=customer.gender%></td>
          <td><%=customer.dob%></td>
          <td><%=customer.mobile%></td>
          <td><%=customer.email%></td>
          <td><a href="/emp/customers/<%=customer._id%>" class="btn btn-primary">Show</a></td>
        </tr>
        <%})%>

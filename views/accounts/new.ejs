              <label for="exampleFormControlTextarea1">Address</label>
              <textarea name="account[address]" class="form-control"  required id="exampleFormControlTextarea1" rows="3"></textarea>
            </div>
            <div class="form-group">
              <label for="exampleFormControlTextarea1">Balance</label>
              <input type="number" name="account[balance]" class="form-control"  placeholder="in rupees"  required id="exampleInputPassword1">

            </div>
            
            <button type="submit" class="btn btn-primary">Request for Account</button>
          

                  <option value="male">Male</option>
                  <option value="female">Female</option>
                  <option value="other">Other</option>
                </select>
              </div> -->
              <div class="form-group">
                <label for="exampleInputPassword1">Account Type</label>
                <select class="custom-select" name="account[accounttype]" required  id="inputGroupSelect01">
                  <option selected>Choose...</option>
                  <option value="savings">Savings</option>
                  <!-- <option value="current">Current</option>
                  <option value="fixed">Fixed</option> -->
                </select>
              </div>
              <!-- <div class="form-group">
                <label for="exampleInputPassword1">DOB</label>
                <input type="date" class="form-control" name="account[dob]" required  id="exampleInputPassword1">
              </div> -->
              <div class="form-group">
                <label for="exampleInputPassword1">Pin</label>
                <input type="password" class="form-control" name="account[pin]" required  id="exampleInputPassword1">
              </div>
              <div class="form-group">
                <label for="exampleInputPassword1">Mobile Number</label>
                <input type="number" class="form-control" name="account[mobile]"  required id="exampleInputPassword1">
              </div>
            <!-- <div class="form-group">
              <label for="exampleInputPassword1">Adhaar Number</label>

    </div>
   
    <div class="row">
        <% user.account.forEach(function(account){%>
            <div class="col-md-3 mt-3">
                <div class="card p-3 text-center">
                    
                    <h5><%= account.accountname%></h5>
                    <h5><%= account.accountno%></h5>
                    <h5><%= account.branch%></h5>
                    <h5><%= account.accounttype%></h5>
                    <h5><%= account.balance%></h5>
                    <h5><%= account.mobile%></h5>
                    <h5><%= account.email%></h5>
                    <h5><%= account.address%></h5>
                    <h5><%= account.pin%></h5>

                  <% if(account.isAccepted){%>
                  <a href="" class="btn btn-primary">Show</a>
                  <%} else{%>
                    <a href="" class="btn btn-primary disabled">Not accepted Yet</a>
                    <%}%>
                </div>
            </div>
       <% })}%>
